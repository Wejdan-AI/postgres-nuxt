# ============================================
# ğŸ“‚ .github/workflows/health.yml
# ============================================
name: Health Check

on:
  workflow_dispatch:
  schedule:
    - cron: "0 3 * * *"

jobs:
  health-check:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Run health check
        run: bash scripts/health_check.sh


